page {
  background-color: #b3d4db;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.moto-container {
  margin-top: 200rpx;
  border: solid 1px #405f80;
  width: 220rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.moto {
  padding: 0 10rpx;
  font-size: 12px;
  color: black;
  text-align: center;
  line-height: 80rpx;
}